<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bai3Activity">

    <Button
        android:id="@+id/btnAlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="AlertDialog"
        android:text="AlertDialog"
        app:layout_constraintEnd_toEndOf="@+id/btnAlertDialogList"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/btnAlertDialogList"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAlertDialogList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="AlertDialogList"
        android:onClick="AlertDialogList"
        app:layout_constraintEnd_toEndOf="@+id/btnAlertDialogSingleChoice"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="@+id/btnAlertDialogSingleChoice"
        app:layout_constraintTop_toBottomOf="@+id/btnAlertDialog" />

    <Button
        android:id="@+id/btnAlertDialogSingleChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="AlertDialogSingleChoice"
        android:onClick="AlertDialogSingleChoice"
        app:layout_constraintEnd_toEndOf="@+id/btnAlertDialogMultiChoice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnAlertDialogMultiChoice"
        app:layout_constraintTop_toBottomOf="@+id/btnAlertDialogList" />

    <Button
        android:id="@+id/btnAlertDialogMultiChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="AlertDialogMultiChoice"
        android:onClick="AlertDialogMultiChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlertDialogSingleChoice" />
</android.support.constraint.ConstraintLayout>